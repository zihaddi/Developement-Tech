Feature-Based Module System:

TypeScript
// modules/auth/index.ts
import { defineNuxtModule, addPlugin, addComponent, createResolver } from '@nuxt/kit'

export default defineNuxtModule({
  meta: {
    name: 'auth-module',
    configKey: 'auth'
  },
  
  defaults: {
    providers: ['local'],
    redirects: {
      login: '/login',
      logout: '/',
      home: '/dashboard'
    },
    strategies: {
      local: {
        endpoints: {
          login: { url: '/api/auth/login', method: 'post' },
          logout: { url: '/api/auth/logout', method: 'post' },
          user: { url: '/api/auth/user', method: 'get' }
        }
      }
    }
  },
  
  setup(options, nuxt) {
    const resolver = createResolver(import.meta.url)
    
    // Add composables
    nuxt.hook('imports:dirs', (dirs) => {
      dirs.push(resolver.resolve('./runtime/composables'))
    })
    
    // Add middleware
    nuxt.hook('imports:dirs', (dirs) => {
      dirs.push(resolver.resolve('./runtime/middleware'))
    })
    
    // Add components
    addComponent({
      name: 'AuthLoginForm',
      filePath: resolver.resolve('./runtime/components/LoginForm.vue')
    })
    
    // Add plugin
    addPlugin(resolver.resolve('./runtime/plugin'))
    
    // Add server handlers
    nuxt.hook('nitro:config', (nitroConfig) => {
      nitroConfig.handlers = nitroConfig.handlers || []
      nitroConfig.handlers.push({
        route: '/api/auth/**',
        handler: resolver.resolve('./runtime/server/auth.ts')
      })
    })
    
    // Add runtime config
    nuxt.options.runtimeConfig.auth = options
    nuxt.options.runtimeConfig.public.auth = {
      providers: options.providers,
      redirects: options.redirects
    }
  }
})

// modules/auth/runtime/composables/useAuth.ts
export const useAuth = () => {
  const config = useRuntimeConfig().public.auth
  const user = useState('auth.user', () => null)
  const token = useCookie('auth-token')
  
  const login = async (credentials: any) => {
    const { data } = await $fetch('/api/auth/login', {
      method: 'POST',
      body: credentials
    })
    
    user.value = data.user
    token.value = data.token
    
    await navigateTo(config.redirects.home)
  }
  
  const logout = async () => {
    await $fetch('/api/auth/logout', { method: 'POST' })
    user.value = null
    token.value = null
    await navigateTo(config.redirects.logout)
  }
  
  return {
    user: readonly(user),
    login,
    logout,
    isAuthenticated: computed(() => !!user.value)
  }
}
Nuxt Layers for Shared Functionality:

TypeScript
// layers/base/nuxt.config.ts
export default defineNuxtConfig({
  modules: [
    '@nuxtjs/tailwindcss',
    '@pinia/nuxt',
    '@vueuse/nuxt'
  ],
  
  // Base configuration shared across all apps
  app: {
    head: {
      meta: [
        { charset: 'utf-8' },
        { name: 'viewport', content: 'width=device-width, initial-scale=1' }
      ]
    }
  },
  
  css: ['~/assets/css/base.css'],
  
  runtimeConfig: {
    public: {
      appVersion: process.env.npm_package_version
    }
  }
})

// layers/base/composables/useApi.ts
export const useApi = () => {
  const config = useRuntimeConfig()
  
  const api = $fetch.create({
    baseURL: config.public.apiBase,
    
    onRequest({ options }) {
      const token = useCookie('auth-token')
      if (token.value) {
        options.headers = {
          ...options.headers,
          Authorization: `Bearer ${token.value}`
        }
      }
    }
  })
  
  return api
}

// layers/theme/nuxt.config.ts
export default defineNuxtConfig({
  extends: ['../base'],
  
  // Theme-specific configuration
  tailwindcss: {
    config: {
      theme: {
        extend: {
          colors: {
            primary: {
              50: '#eff6ff',
              500: '#3b82f6',
              900: '#1e3a8a'
            }
          }
        }
      }
    }
  }
})
