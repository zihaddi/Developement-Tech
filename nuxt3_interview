43. How can you build a multi-role auth-based system using Nuxt 3 + Laravel backend?
Answer: Frontend (Nuxt 3) Setup:

TypeScript
// composables/useAuth.ts
interface User {
  id: number
  name: string
  email: string
  roles: string[]
  permissions: string[]
}

interface LoginCredentials {
  email: string
  password: string
}

export const useAuth = () => {
  const user = useState<User | null>('auth.user', () => null)
  const token = useCookie('auth-token', {
    default: () => null,
    httpOnly: true,
    secure: true,
    sameSite: 'strict',
    maxAge: 60 * 60 * 24 * 7 // 7 days
  })
  
  const login = async (credentials: LoginCredentials) => {
    try {
      const response = await $fetch('/api/auth/login', {
        method: 'POST',
        body: credentials,
        baseURL: useRuntimeConfig().public.laravelApiBase
      })
      
      user.value = response.user
      token.value = response.token
      
      return response
    } catch (error) {
      throw error
    }
  }
  
  const logout = async () => {
    try {
      await $fetch('/api/auth/logout', {
        method: 'POST',
        headers: {
          Authorization: `Bearer ${token.value}`
        },
        baseURL: useRuntimeConfig().public.laravelApiBase
      })
    } finally {
      user.value = null
      token.value = null
      await navigateTo('/login')
    }
  }
  
  const fetchUser = async () => {
    if (!token.value) return
    
    try {
      const userData = await $fetch('/api/auth/user', {
        headers: {
          Authorization: `Bearer ${token.value}`
        },
        baseURL: useRuntimeConfig().public.laravelApiBase
      })
      
      user.value = userData
    } catch (error) {
      // Token might be invalid
      token.value = null
      await navigateTo('/login')
    }
  }
  
  const hasRole = (role: string): boolean => {
    return user.value?.roles?.includes(role) ?? false
  }
  
  const hasAnyRole = (roles: string[]): boolean => {
    return roles.some(role => hasRole(role))
  }
  
  const hasPermission = (permission: string): boolean => {
    return user.value?.permissions?.includes(permission) ?? false
  }
  
  const hasAnyPermission = (permissions: string[]): boolean => {
    return permissions.some(permission => hasPermission(permission))
  }
  
  return {
    user: readonly(user),
    token: readonly(token),
    login,
    logout,
    fetchUser,
    hasRole,
    hasAnyRole,
    hasPermission,
    hasAnyPermission,
    isAuthenticated: computed(() => !!user.value),
    isAdmin: computed(() => hasRole('admin')),
    isModerator: computed(() => hasRole('moderator')),
    isUser: computed(() => hasRole('user'))
  }
}

// middleware/auth.ts
export default defineNuxtRouteMiddleware(() => {
  const { isAuthenticated } = useAuth()
  
  if (!isAuthenticated.value) {
    return navigateTo('/login')
  }
})

// middleware/role.ts
export default defineNuxtRouteMiddleware((to) => {
  const { hasRole, hasAnyRole } = useAuth()
  
  const requiredRole = to.meta.requiresRole as string
  const requiredRoles = to.meta.requiresAnyRole as string[]
  
  if (requiredRole && !hasRole(requiredRole)) {
    throw createError({
      statusCode: 403,
      statusMessage: `Access denied. Required role: ${requiredRole}`
    })
  }
  
  if (requiredRoles && !hasAnyRole(requiredRoles)) {
    throw createError({
      statusCode: 403,
      statusMessage: `Access denied. Required roles: ${requiredRoles.join(', ')}`
    })
  }
})

// middleware/permission.ts
export default defineNuxtRouteMiddleware((to) => {
  const { hasPermission, hasAnyPermission } = useAuth()
  
  const requiredPermission = to.meta.requiresPermission as string
  const requiredPermissions = to.meta.requiresAnyPermission as string[]
  
  if (requiredPermission && !hasPermission(requiredPermission)) {
    throw createError({
      statusCode: 403,
      statusMessage: `Access denied. Required permission: ${requiredPermission}`
    })
  }
  
  if (requiredPermissions && !hasAnyPermission(requiredPermissions)) {
    throw createError({
      statusCode: 403,
      statusMessage: `Access denied. Required permissions: ${requiredPermissions.join(', ')}`
    })
  }
})

// plugins/auth.client.ts
export default defineNuxtPlugin(async () => {
  const { fetchUser, token } = useAuth()
  
  // Restore user session on app load
  if (token.value) {
    await fetchUser()
  }
})

// plugins/api.ts
export default defineNuxtPlugin(() => {
  const { token } = useAuth()
  
  // Global API configuration
  $fetch.create({
    baseURL: useRuntimeConfig().public.laravelApiBase,
    
    onRequest({ options }) {
      if (token.value) {
        options.headers = {
          ...options.headers,
          Authorization: `Bearer ${token.value}`
        }
      }
    },
    
    onResponseError({ response }) {
      if (response.status === 401) {
        // Token expired or invalid
        navigateTo('/login')
      } else if (response.status === 403) {
        // Insufficient permissions
        throw createError({
          statusCode: 403,
          statusMessage: 'Access denied'
        })
      }
    }
  })
})
