    locales: [
      { code: 'en', name: 'English' },
      { code: 'es', name: 'EspaÃ±ol' }
    ],
    defaultLocale: 'en',
    vueI18n: './i18n.config.ts'
  }
})

// i18n.config.ts
export default defineI18nConfig(() => ({
  legacy: false,
  locale: 'en',
  messages: {
    en: {
      welcome: 'Welcome',
      hello: 'Hello {name}'
    },
    es: {
      welcome: 'Bienvenido',
      hello: 'Hola {name}'
    }
  }
}))
